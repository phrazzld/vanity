{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "max-lines-per-function": [
      "warn",
      {
        "max": 300,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines": [
      "warn",
      {
        "max": 500,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-non-null-assertion": "error",
    "@typescript-eslint/consistent-type-imports": "error"
  },
  "overrides": [
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "max-lines": [
          "error",
          {
            "max": 1000,
            "skipBlankLines": true,
            "skipComments": true
          }
        ]
      }
    }
  ]
}
