{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../src/**/*.stories.ts", "../src/**/*.stories.tsx"],
  "exclude": [
    "node_modules",
    "../**/*.test.*",
    "../**/*.spec.*",
    "../**/test/**/*",
    "../**/__tests__/**/*",
    "../**/__mocks__/**/*"
  ]
}
