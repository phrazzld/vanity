{
  "name": "vanity",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:log": "./scripts/rotate-logs.sh && next dev --turbopack 2>&1 | tee -a logs/dev.log",
    "logs": "cat logs/dev.log",
    "logs:watch": "tail -f logs/dev.log",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:data": "node scripts/migrate-data.js",
    "migrate:quotes": "node scripts/migrate-quotes.js",
    "migrate:all": "./scripts/migration-deploy.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/leaflet": "^1.9.16",
    "@types/react-leaflet": "^3.0.0",
    "bcrypt": "^5.1.1",
    "leaflet": "^1.9.4",
    "next": "15.1.4",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prisma": "^6.5.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
