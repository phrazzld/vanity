{
  "name": "vanity",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features",
        "hidden": false
      },
      {
        "type": "fix",
        "section": "Bug Fixes",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "Maintenance",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "Documentation",
        "hidden": false
      },
      {
        "type": "style",
        "section": "Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "Code Refactoring",
        "hidden": false
      },
      {
        "type": "perf",
        "section": "Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "Tests",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "CI/CD",
        "hidden": false
      }
    ],
    "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "skip": {
      "tag": false
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:log": "./scripts/rotate-logs.sh && next dev --turbopack 2>&1 | tee -a logs/dev.log",
    "logs": "cat logs/dev.log",
    "logs:watch": "tail -f logs/dev.log",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint --config eslint.config.cjs",
    "lint:fix": "eslint --config eslint.config.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "typecheck:strict": "tsc -p tsconfig.strict.json",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest --testMatch='**/*.snapshot.test.{ts,tsx}'",
    "test:snapshot:update": "node scripts/update-snapshots.js",
    "prisma:generate": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:data": "node scripts/migrate-data.js",
    "migrate:quotes": "node scripts/migrate-quotes.js",
    "migrate:all": "./scripts/migration-deploy.sh",
    "build:audit-filter": "tsc scripts/audit-filter.ts --esModuleInterop --resolveJsonModule --outDir dist/scripts --skipLibCheck",
    "build:verify": "tsc -p tsconfig.typecheck.json --noEmit",
    "security:audit": "npm audit --audit-level=high",
    "security:scan": "npm run build:audit-filter && node dist/scripts/audit-filter.js",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry-run": "standard-version --dry-run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-query": "^5.75.5",
    "@tanstack/react-query-devtools": "^5.75.5",
    "@types/leaflet": "^1.9.16",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "leaflet": "^1.9.4",
    "nanoid": "^5.1.5",
    "next": "^15.3.2",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0",
    "winston": "^3.17.0",
    "zod": "^3.25.32",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@emotion/jest": "^11.13.0",
    "@eslint/js": "^9.22.0",
    "@next/eslint-plugin-next": "^15.2.2",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-viewport": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.2",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-storybook": "^0.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "standard-version": "^9.5.0",
    "storybook": "^8.6.12",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "typescript-eslint": "^8.26.0"
  }
}
