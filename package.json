{
  "name": "vanity",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.9.2"
  },
  "removedDependencies": {
    "// IMPORTANT": "These packages were removed and should NOT be re-added",
    "@tanstack/react-query": "Never used, plain fetch() sufficient for static data",
    "@tanstack/react-query-devtools": "Removed with React Query",
    "winston": "Console.log adequate for static site, package was never even imported",
    "prisma": "Replaced with markdown files, no database needed",
    "@prisma/client": "Removed with database elimination",
    "bcryptjs": "No authentication needed for public content",
    "jsonwebtoken": "Admin system removed entirely",
    "next-auth": "No auth needed for static personal site",
    "// Why These Were Removed": "Over-engineering for a personal blog with ~700 content items",
    "// Cost Savings": "$228/year database hosting eliminated",
    "// Bundle Impact": "5.3MB of dependencies removed",
    "// Maintenance": "2300+ lines of unnecessary code deleted"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features",
        "hidden": false
      },
      {
        "type": "fix",
        "section": "Bug Fixes",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "Maintenance",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "Documentation",
        "hidden": false
      },
      {
        "type": "style",
        "section": "Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "Code Refactoring",
        "hidden": false
      },
      {
        "type": "perf",
        "section": "Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "Tests",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "CI/CD",
        "hidden": false
      }
    ],
    "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "skip": {
      "tag": false
    }
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/main-*.js",
      "maxSize": "55kb"
    },
    {
      "path": ".next/static/chunks/framework-*.js",
      "maxSize": "45kb"
    },
    {
      "path": ".next/static/chunks/pages/_app-*.js",
      "maxSize": "100kb"
    },
    {
      "path": ".next/static/chunks/app/**/*.js",
      "maxSize": "50kb"
    }
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:log": "./scripts/rotate-logs.sh && next dev --turbopack 2>&1 | tee -a logs/dev.log",
    "logs": "cat logs/dev.log",
    "logs:watch": "tail -f logs/dev.log",
    "build": "node scripts/generate-static-data.js && next build",
    "analyze": "node scripts/analyze-bundle.js",
    "start": "next start",
    "lint": "eslint --config eslint.config.cjs",
    "lint:fix": "eslint --config eslint.config.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "vanity": "tsx cli/index.ts",
    "reading-summary": "tsx scripts/generate-reading-summary.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "typecheck:strict": "tsc -p tsconfig.strict.json",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest --testMatch='**/*.snapshot.test.{ts,tsx}'",
    "test:snapshot:update": "node scripts/update-snapshots.js",
    "security:audit": "npm audit --audit-level=critical",
    "validate:logging": "./scripts/validate-structured-logging.sh",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry-run": "standard-version --dry-run"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/leaflet": "^1.9.16",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "leaflet": "^1.9.4",
    "nanoid": "^5.1.5",
    "next": "^15.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0",
    "sharp": "^0.34.4",
    "zod": "^3.25.32",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@emotion/jest": "^11.13.0",
    "@eslint/js": "^9.22.0",
    "@next/eslint-plugin-next": "^15.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.32.0",
    "@types/tmp": "^0.2.6",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "boxen": "^8.0.1",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.2",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "execa": "^9.6.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "inquirer": "^12.9.2",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-next-dynamic": "^1.0.2",
    "lint-staged": "^15.5.1",
    "null-loader": "^4.0.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "slugify": "^1.6.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1",
    "tmp": "^0.2.5",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "typescript-eslint": "^8.26.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
